<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:id="@+id/liveCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/uper_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/shimmer_ligtest_gray"
            android:paddingBottom="10dp"
            app:cardCornerRadius="10.dp">

            <RelativeLayout
                android:id="@+id/uperll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/match_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/light_gray">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"/>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/match_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    app:cardBackgroundColor="@color/light_gray">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"/>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_state"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="7.dp"
                    android:gravity="center"
                    android:orientation="vertical">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="50.dp"
                        android:layout_height="50.dp"
                        android:layout_below="@id/match_state"
                        android:backgroundTint="@color/little_dark_gray"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="3.dp">
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/light_gray">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/light_gray"
                    app:cardCornerRadius="10.dp">


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/match_state"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="7.dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50.dp"
                        android:layout_height="50.dp"
                        android:layout_below="@id/match_state"
                        android:backgroundTint="@color/little_dark_gray"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="3.dp">
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/light_gray">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:backgroundTint="@color/little_dark_gray"
                    android:layout_below="@id/linearLayout2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_30sdp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</com.facebook.shimmer.ShimmerFrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#FFFFFF"
    android:paddingBottom="10dp"
    android:layout_marginBottom="25dp"
    android:outlineSpotShadowColor="@color/little_dark_gray"
    app:cardCornerRadius="10.dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/light_gray">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img"
                android:paddingTop="80dp"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cricket Analysis"
            android:fontFamily="@font/rem"
            android:textColor="@color/dark_blue"
            android:layout_below="@id/cv"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/news_second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ICC Cricket World Cup 2023 dates released, Wondering where to watch? There is good news"
            android:fontFamily="@font/rem"
            android:textColor="@color/black"
            android:layout_below="@id/new_title"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textStyle="bold"
            android:textSize="15sp"
            android:ellipsize="end"
            android:paddingHorizontal="10dp"/>

        <TextView
            android:id="@+id/news_bref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With 100 days to go before the tournament begins, the International Cricket Council today released the schedule of 50-over World Cup to be held in India. Star Sports has the broadcast as well as digital rights for ICC Cricket ODI World Cup 2023 after it bagged the rights for all ICC events from 2015 to 2023. This included exclusive live and highlights rights across all platforms for ICC major events – the ICC Cricket World Cup and its qualifiers, the ICC Women’s World Cup, the ICC World Twenty20"
            android:fontFamily="@font/rem"
            android:textColor="@color/little_dark_gray"
            android:layout_below="@id/news_second_title"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingHorizontal="10dp"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
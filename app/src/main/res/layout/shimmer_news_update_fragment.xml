<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_news_update"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/shimmer_ligtest_gray"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="7dp"
                    android:backgroundTint="@color/shimmer_gray"
                    app:cardCornerRadius="10dp"></androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/cv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-30dp"
                    android:backgroundTint="@color/dark_blue"
                    app:cardCornerRadius="@dimen/_100sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/rem"
                    android:text="@string/app_name"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/_12ssp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/lastTime"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_7sdp"
                    app:cardBackgroundColor="@color/shimmer_gray"
                    app:cardCornerRadius="@dimen/_10sdp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/NewHeading"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_below="@+id/lastTime"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/shimmer_gray"
                    app:cardCornerRadius="@dimen/_10sdp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/NewsSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/NewHeading"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/shimmer_gray"
                    app:cardCornerRadius="@dimen/_10sdp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/NewsSubTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_30sdp"
                    android:layout_marginTop="190dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/green_ripple"
                    android:paddingVertical="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_7sdp"
                    app:rippleColor="#098100">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_2sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/readmore" />

                        <TextView
                            android:id="@+id/readfull_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/imageView3"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/rem"
                            android:gravity="center_vertical"
                            android:text="Read Full Story"
                            android:textColor="@color/white" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_toStartOf="@+id/imageView4"
                            app:dividerColor="@color/white" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/share_tv"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/baseline_share_24" />

                        <TextView
                            android:id="@+id/share_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:fontFamily="@font/rem"
                            android:gravity="center"
                            android:text="Share"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="7dp"
            android:backgroundTint="@color/light_gray"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/NewsImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/cv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-30dp"
            android:backgroundTint="@color/red_black"
            app:cardCornerRadius="@dimen/_100sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_2sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/rem"
            android:text="@string/app_name"
            android:textColor="@color/redmain"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/lastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:fontFamily="@font/rem"
            android:text="-- --  ago"
            android:textColor="@color/little_dark_gray"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/NewHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_15sdp"
            android:text=" -- "
            android:textColor="@color/redmain"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NewsSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NewHeading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_100sdp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_20sdp"
            android:text=" -- "
            android:textColor="@color/light_gray"
            android:textSize="@dimen/_10ssp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NewsSubTitle"
            android:layout_centerHorizontal="true"
            app:rippleColor="#098100"
            android:clickable="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_7sdp"
            android:focusable="true"
            android:foreground="@drawable/green_ripple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                   android:paddingTop="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/readmore" />

                <TextView
                    android:id="@+id/readfull_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/rem"
                    android:text="Read Full Story"
                    android:textColor="@color/white" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="27dp"
                    app:dividerColor="@color/white" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/baseline_share_24" />

                <TextView
                    android:id="@+id/share_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/rem"
                    android:text="Share"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>


<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_gradel"
    tools:context=".mainScreen">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="@dimen/_27sdp"
        android:layout_height="@dimen/_27sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_6sdp"
        android:visibility="gone"
        android:translationZ="0dp"
        android:src="@drawable/back_btn"
        />

    <include
        android:id="@+id/mainlayout"
        layout="@layout/activity_main" />

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/blurViewcard"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="-20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/_20sdp">

            <ImageView
                android:id="@+id/droorbackBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                   android:tint="@color/little_dark_gray"></ImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilepic"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilepic"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Gautam Singh"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="--"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:layout_below="@id/email"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_15sdp" />


            <ImageView
                android:id="@+id/notification"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@+id/divider1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="@dimen/_7sdp"
                android:padding="@dimen/_3sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/bellon"
                  android:tint="@color/little_dark_gray"  />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/notification"
                android:layout_alignBottom="@+id/notification"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/notification"
                android:checked="true"
                android:gravity="start|center_vertical"
                android:text="Notification"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:showText="false"
                app:switchPadding="@dimen/_45sdp"
                app:thumbTint="@color/switch_thumb"
                app:trackTint="@color/switch_track" />


            <LinearLayout
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/switchMaterial"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/feedback"
                      android:tint="@color/little_dark_gray"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Rate Us"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                      android:tint="@color/little_dark_gray"
                    android:src="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rate"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/shareapp"
                      android:tint="@color/little_dark_gray"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Share App"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                      android:tint="@color/little_dark_gray"
                    android:src="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>


            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:layout_below="@id/share"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_15sdp" />


            <LinearLayout
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider2"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/terms"
                      android:tint="@color/little_dark_gray"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Terms and condition"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                      android:tint="@color/little_dark_gray"
                    android:src="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/terms"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/aboutus"
                      android:tint="@color/little_dark_gray"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="About Us"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                      android:tint="@color/little_dark_gray"
                    android:src="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/private_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/help"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:src="@drawable/policy"
                      android:tint="@color/little_dark_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingStart="@dimen/_13sdp"
                    android:text="Private Policy"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                      android:tint="@color/little_dark_gray"
                    android:src="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/help"
                      android:tint="@color/little_dark_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Help"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                      android:tint="@color/little_dark_gray"
                    android:src="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginRight="0dp"
        android:elevation="@dimen/_10sdp"
        android:scaleType="centerCrop"
        android:translationZ="60dp"
        app:lottie_rawRes="@raw/settings" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>